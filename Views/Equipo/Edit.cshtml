@model MvcEquipo.Models.Equipo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="equipoId" />
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deporte" class="control-label"></label>
                <input asp-for="deporte" class="form-control" />
                <span asp-validation-for="deporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patrocinadorId" class="control-label"></label>
                <select asp-for="patrocinadorId" class="form-control" asp-items="ViewBag.patrocinadorId"></select>
                <span asp-validation-for="patrocinadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
